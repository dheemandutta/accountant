@*@model Accountant.Entities.CustomerMasterEntities*@
@{
    ViewBag.Title = "Customer";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Customer.js"></script>

<body style="background-image: url(../background/depart.jpg);
    background-size: cover;">

    @Html.Hidden("saveCustomer", @Url.Action("SaveCustomer", "Customer"))
    @Html.Hidden("loaddata", @Url.Action("LoadAllCustomerData", "Customer"))
    @Html.Hidden("getCustomerbyid", @Url.Action("GetCustomerId", "Customer"))
    @Html.Hidden("updateCustomer", @Url.Action("UpdateCustomer", "Customer"))
    @*@Html.Hidden("getAllParentCustomerData", @Url.Action("GetAllParentCustomerData", "Customer"))*@

    <div class="row" style="height:1050px;">
        <div class="col-md-7 bac" style=" width: 100%;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text m-t-lg">
                        <h2>
                            Customer
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8" style="width: 100%;">

            <div style="height:900px;">
                @*/////////////////////// class="table-responsive"///////////////////////////*@
                <div class="card">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="panel-title"><h4>Add New Customer</h4></div>
                                </div>
                                <div class="ibox float-e-margins">
                                    <div class="ibox-content">
                                        <form class="form-horizontal" id="CustomerForm" data-parsley-validate="" novalidate="" action="#">
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Customer Name:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;"><input type="text" class="form-control" style="width: 90%;" id="txtCustomerName" placeholder="Customer Name" required="required"></div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Address:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;">
                                                    <textarea type="text" class="form-control valid" id="txtAddress" placeholder="Address" style="width: 90% !important;" required="required"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">PAN Number:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;"><input type="text" class="form-control" style="width: 90%;" id="txtPANNumber" placeholder="PAN Number" required="required"></div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">CST Number:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;"><input type="text" class="form-control" style="width: 90%;" id="txtCSTNumber" placeholder="CST Number" required="required"></div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">VAT Number:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;"><input type="text" class="form-control" style="width: 90%;" id="txtVATNumber" placeholder="VAT Number" required="required"></div>
                                            </div>
                                            <div class="form-group" style="margin-right: -600px;">
                                                <label class="col-sm-2 control-label">Branch:<font color=""></font> </label>
                                                <div class="col-sm-10" style="width: 30%;" required="required">
                                                    @*@Html.DropDownListFor(model => model.AccountId, (IEnumerable<SelectListItem>)ViewBag.Account, "Select", new { @class = "form-control", @id = "drpAccountId" })*@
                                                    <select id="select2-3" multiple="multiple" class="form-control" style="width:90%">
                                                        <option value="AL">Alabama</option>
                                                        <option value="AR">Arkansas</option>
                                                        <option value="IL">Illinois</option>
                                                        <option value="IA">Iowa</option>
                                                        <option value="KS">Kansas</option>
                                                        <option value="KY">Kentucky</option>
                                                        <option value="LA">Louisiana</option>
                                                        <option value="MN">Minnesota</option>
                                                        <option value="MS">Mississippi</option>
                                                        <option value="MO">Missouri</option>
                                                        <option value="OK">Oklahoma</option>
                                                        <option value="SD">South Dakota</option>
                                                        <option value="TX">Texas</option>
                                                        <option value="TN">Tennessee</option>
                                                        <option value="WI">Wisconsin</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <input type="hidden" id="#CustomerId" />
                                            </div>

                                            <div class="panel-footer text-center">
                                                <button type="button" class="btn btn-primary" id="btnSave" onclick="return Add();">Save</button>
                                                <button type="button" class="btn btn-primary" id="btnClear" onclick="clearTextBox();">Clear</button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div style="width: 100%;">
                        <div class="panel panel-default">
                            <div class="card">
                                <div style="width:95%; margin:0 auto" class="tablecontainer">

                                    <input type="hidden" id="hdncount" />
                                    <input type="hidden" id="hdnrole" />
                                    <input type="hidden" id="hdndbfilePath" />

                                    <div class="table-responsive">
                                        @*/////////////////////// class="table-responsive"///////////////////////////*@
                                        <h2>
                                            Customer List
                                        </h2>
                                        <table id="CustomerTable" class="table table-striped table-bordered table-hover" cellspacing="0" style="width: 93.667%;">
                                            <thead>
                                                <tr>
                                                    <th>Customer</th>
                                                    <th>Address</th>
                                                    <th>Pan Number</th>
                                                    <th>CST Number</th>
                                                    <th>VAT Number</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        @*/////////////////////// class="table-responsive"///////////////////////////*@
    </div>
</body>

@section Styles {
    @Styles.Render("~/bundles/datatablesCss")
    @Styles.Render("~/bundles/SweetAlertCss")
    @Styles.Render("~/bundles/select2Css")
}

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/demoDatatable")
    @Scripts.Render("~/bundles/parsley")
    @Scripts.Render("~/bundles/SweetAlert")
    @Scripts.Render("~/bundles/select2")
}

<script type="text/javascript">
    $(document).ready(function () {
        SetUpGrid();
    });
</script>