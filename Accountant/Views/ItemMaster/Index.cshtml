@model Accountant.Entities.ItemMasterEntities

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/select.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/rowReorder.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<link href="dist/dual-listbox.css" rel="stylesheet">

<script src="~/Scripts/ItemMaster.js"></script>
<link href="~/link/css/rank.css" rel="stylesheet" />

<body style="background-image: url(../background/depart.jpg);
    background-size: cover;">

    @Html.Hidden("myUrl", @Url.Action("GetItemMasterByID", "ItemMaster"))
    @Html.Hidden("ItemMasteradd", @Url.Action("Add", "ItemMaster"))
    @Html.Hidden("loaddata", @Url.Action("LoadData", "ItemMaster"))
    @Html.Hidden("deletedata", @Url.Action("DeleteItemMaster", "ItemMaster"))

    <div class="row">
        <div class="col-md-7 bac" style=" width: 100%;">
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text m-t-lg">
                            <h1>
                                Item Master
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8" style="width: 93.667%;">
                <div class="card">
                    <div style="width:99%; margin:0 auto" class="tablecontainer">
                        <button type="button" class="button1" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add Item</button><br /><br />

                        <input type="hidden" id="hdncount" />
                        <input type="hidden" id="hdnrole" />
                        <div class="table-responsive" style="height:900px;">
                            @*/////////////////////// class="table-responsive"///////////////////////////*@
                            <table id="certtable" class="display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Unit</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    </div>
            </div>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">


                <div class="table-responsive">
                    @*/////////////////////// class="table-responsive"///////////////////////////*@
                    <div class="modal-dialog" style="width:890px;">
                        <div class="modal-content">

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <div>
                                            <h2>&nbsp;&nbsp;Please Enter Item</h2>

                                        </div>
                                        <div class="ibox-content">
                                            <form method="get" class="form-horizontal">

                                                <div class="form-group" style="margin-right: -600px;">
                                                    <label class="col-sm-2 control-label">Item:    <font color="red">*</font> </label>
                                                    <div class="col-sm-10" style="width: 30%;"><input type="text" class="form-control" id="ItemName" placeholder="Item"></div>
                                                </div>
                                                <div class="form-group" style="margin-right: -600px;">
                                                    <label class="col-sm-2 control-label">Unit Name:    <font color="red">*</font> </label>
                                                    <div class="col-sm-10" style="width: 30%;">
                                                        @Html.DropDownListFor(model => model.UnitID, (IEnumerable<SelectListItem>)ViewBag.UnitMaster, "Select", new { @class = "form-control" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <input type="hidden" id="ID" />
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Add();">Update</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </div>


    @*/////////////////////// class="table-responsive"///////////////////////////*@
    <div class="row">
        <div>
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/css")

    <script src="~/Scripts/DataTables/dataTables.select.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.rowReorder.min.js"></script>

    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />

    <script src="dist/dual-listbox.js"></script>

    <script src="~/Scripts/jquery.typeahead.js"></script>
    <script src="~/Scripts/jquery.bootstrap-duallistbox.min.js"></script>
    <link href="~/Content/bootstrap-duallistbox.css" rel="stylesheet" />
    <script src="~/Scripts/gijgo/combined/gijgo.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            SetUpGrid();

        });
    </script>
}

